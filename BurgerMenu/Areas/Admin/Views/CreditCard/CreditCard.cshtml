@{
    ViewBag.Title = "CreditCard";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<link rel="stylesheet" href="~/Content/style.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400&display=swap" rel="stylesheet">

<div class="w-100 vh-100 bg-light">
    <div class="d-flex h-100 align-items-center">
        <div class="col-xl-8 col-lg-10 col-md-10 col-sm-10 mx-auto">
            <div class="row align-items-center">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="position-relative">
                        <div class="cardStyle">
                            <div class="text-end text-white"><strong>VISA</strong></div>
                            <div class="mt-3 d-flex align-items-center justify-content-between">
                                <div><img src="~/Content/pngwing.com.png" alt="Chip" height="60"></div>
                                <div><img style="transform:rotate(90deg)" src="~/Content/wifi.svg" alt="Chip" height="30"></div>
                            </div>
                            <div class="fs-4 mt-2 cardFont text-secondary" id="visualNumber">1234 5678 1234 5678</div>
                            <div class="row mt-2">
                                <div class="col"></div>
                                <div class="col text-shadow-white"><span id="visualMonth">12</span>/<span id="visualYear">24</span></div>
                            </div>
                            <div class="text-info text-shadow-black"><strong id="visualName">EMRE DAĞLAR</strong></div>
                        </div>
                        <div class="cardStyle cardBack pt-3">
                            <div class="mt-4 p-4 bg-black"></div>
                            <div class="mb-3 bg-white">
                                <div class="d-flex justify-content-between">
                                    <div class="p-3 bg-white"></div>
                                    <div class="p-3 bg-light"><em id="visualCVV">123</em></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="px-4 py-5 bg-white customRounded shadow">
                        <h4 class="text-dark">Kart Detayı</h4>
                        <form action="">
                            <div class="mt-4 mb-3">
                                <input onkeyup="updateCard(this,'visualNumber')" onblur="protect(this,4)" type="text" name="cardNumber" id="cardNumber" placeholder="KART NO" class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="text" onkeyup="updateCard(this,'visualName')" name="cardholderName" id="cardholderName" placeholder="İSİM SOYİSİM" class="form-control">
                            </div>
                            <div class="row">
                                <div class="col"><input type="text" onkeyup="updateCard(this,'visualMonth')" placeholder="AY" name="month" class="form-control"></div>
                                <div class="col"><input type="text" onkeyup="updateCard(this,'visualYear')" placeholder="YIL" name="year" class="form-control"></div>
                                <div class="col"><input type="text" onkeyup="updateCard(this,'visualCVV')" placeholder="CVV" name="cvv" class="form-control"></div>
                            </div>
                            <div class="mt-3 d-flex">
                                <button type="submit" class="btn btn-dark w-100 me-2">ÖDE</button>
                                <button type="submit" class="btn btn-outline-primary w-25 me-2"style="margin-left: 10px";>İptal Et
                                </button>
                                
                                @*<a href="" class="btn btn-outline-danger w-25 ms-2">İPTAL ET</a>*@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function updateCard(t, id) {
        var elem = document.getElementById(id);
        var num = t.value;
        if (id === 'visualNumber') {
            if (num.length > 16) return t.value = num.substr(0, 16);
            num = num.toString().match(/.{4}/g) ? num.toString().match(/.{4}/g).join(' ') : num;
        }
        elem.innerText = num;
    }

    function protect(t, end) {
        var num = t.value;
        t.value = num.substr(num.length - end, end);
    }
</script>
