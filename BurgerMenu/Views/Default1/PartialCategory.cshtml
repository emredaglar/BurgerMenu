@model List<BurgerMenu.Entities.Category>

<ul class="nav site-tab-nav nav-pills mb-5" id="pills-tab" role="tablist">
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <li class="nav-item site-animate">
            <a class="nav-link @(i == 0 ? "active" : "")" id="category-@item.CategoryId-tab" data-toggle="pill" href="#category-@item.CategoryId" role="tab" aria-controls="category-@item.CategoryId" aria-selected="@(i == 0 ? "true" : "false")">@item.CategoryName</a>
        </li>
    }
</ul>